<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1>Events</h1>
  </div>
</div>

<div class="col-6"></div>
<div class="col-6"></div>

<div class="text-center">
  <a href="#myModal" class="btn btn-info" data-bs-toggle="modal" data-bs-target="#myModal" onclick="openModal()">Create new event</a>
</div>

<div id="myModal" class="modal fade" tabindex="-1" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title" id="myModalLabel">Create New Event</h4>
        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close" aria-hidden="true">&times;</button>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <input type="text" id="eventName" name="eventName" class="form-control" placeholder="Event Name">
        </div>
        <div class="form-group">
          <label for="eventDescription">Event Description:</label>
          <textarea type="text" id="eventDescription" name="eventDescription" class="form-control" placeholder="Type Here" rows="4" cols="50"></textarea>
        </div>
        <div class="form-group">
          <label for="date" id="date">Date:</label>
          <input type="date" id="date" name="date" class="form-control">
          <input type="checkbox" id="multiDay" name="multiDay" value="multiDay">
          <label for="multiDay">Multiday</label>
        </div>
        <div class="form-group">
          <label for="startTime" id="startLabel">Start Time:</label>
          <input type="time" id="startTime" name="startTime" class="form-control">
          <input type="checkbox" id="allDay" name="allDay" value="allDay">
          <label for="allDay">All Day</label>
        </div>
        <div class="form-group">
          <label for="endTime" id="endLabel">End Time:</label>
          <input type="time" id="endTime" name="endTime" class="form-control">
        </div>
        <div class="form-group">
          <div class="dropdown">
            <label for="tags">Select Event Tags: </label>
            <select name="tags" id="tags" multiple>
              <option value="academic">Academic</option>
              <option value="athletics">Athletics</option>
              <option value="artsSciences">Arts and Sciences</option>
              <option value="business">Business</option>
              <option value="communications">CMCI</option>
              <option value="engineering">Engineering</option>
              <option value="outdoor">Outdoor Activities</option>
              <option value="social">Social</option>
            </select>
          </div>
        </div>
        <div class="form-group">
          <input type="submit" value="Submit" class="btn btn-primary btn-block" data-bs-dismiss="modal">
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/js/createEvent.bundle.js"></script>
